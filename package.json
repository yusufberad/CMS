{
  "name": "cloud-file-manager",
  "version": "1.0.0",
  "description": "FTP ve Amazon S3 destekli masaüstü dosya yöneticisi",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "clean": "rimraf dist"
  },
  "keywords": [
    "electron",
    "ftp",
    "s3",
    "amazon",
    "file-manager"
  ],
  "author": "Furkan",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/lib-storage": "^3.454.0",
    "@aws-sdk/s3-request-presigner": "^3.454.0",
    "@smithy/node-http-handler": "^4.4.5",
    "basic-ftp": "^5.0.4"
  },
  "build": {
    "appId": "com.cloudfilemanager.app",
    "productName": "Heysem Cloud Manager",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!**/*.map",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,README,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{thumbs.db,Thumbs.db,.eslintrc,.eslintrc.js,.eslintignore}"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/favicon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/apple-touch-icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/android-chrome-512x512.png",
      "category": "Utility"
    },
    "electronLanguages": [
      "en",
      "tr"
    ]
  }
}
